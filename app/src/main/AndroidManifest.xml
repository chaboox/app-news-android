<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.achour.newsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_news"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_news_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.achour.newsapp.ui.onenews.OneNewsActivity"
            android:exported="true" />
        <activity
            android:name="com.achour.newsapp.ui.login.FingerPrintLoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.achour.newsapp.ui.news.NewsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>

</manifest>